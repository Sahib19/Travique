<!-- Flash message -->
    <% if(success && success.length) { %>
      <div class="alert alert-success text-center mt-3 mb-0 alert-dismissible fade show">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>

     <% if(error && error.length) { %>
      <div class="alert alert-danger text-center mt-3 mb-0 alert-dismissible fade show">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WonderLust Listings</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


</head>

<% layout("/layouts/boilerplate") %>

  <body>
    <!-- filter -->
    <div id="filters">
      <div class="filter">
        <div><i class="fa-solid fa-earth-americas"></i></div>
        <p>All</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Rooms</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountains</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-tree"></i></div>
        <p>Forest</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-gopuram"></i></div>
        <p>Heritage Sites</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>

      <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Artic</p>
      </div>
    </div>



    <div class="container mt-4">
      <!-- Listings Grid -->
      <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-3 mb-5">
        <p></p>
        <% for(let list of allListing) { %>
          <div class="col rounded-4">
                <div class="card-single rounded-4">
                  <a href="/listing/<%= list._id %>" class="text-decoration-none text-dark rounded-4">
                    <div class="card h-100 shadow-sm rounded-4">
                      <div class="image-div rounded-top-4">
                      <img src="<%= list.image.url %>" class="card-img-top rounded-top-4" alt="listing-image"
                        style="height: 20rem; object-fit: cover;">
                      </div>

                      <div class="card-body card-text ps-2 pt-2">    
                          <span class="place">
                            <%= list.title %>
                          </span>
                          <span class="price">
                            &#8377; <%= list.price ? list.price.toLocaleString("en-IN") : 0 %>
                          </span>                       
                      </div>
                    </div>
                  </a>
                </div>
              </div>
          <% } %>
      </div>
    </div>

    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- script tag for filter logic -->
    <script src="/js/filter.js"></script>
  </body>

</html>
<% layout("/layouts/boilerplate") %>


<body style="font-family: Arial, sans-serif; background-color: #f9f9f9;">

<h2 style="text-align: center; margin-bottom: 10px; margin-top:50px; color: #333;">üìå Details of <%= listing.title %></h2>

    <!-- Add spacing from navbar -->
    <div style="margin-top: 80px; margin-bottom: 80px; max-width: 600px; margin-left: auto; margin-right: auto; background: #fff; border-radius: 12px; overflow: hidden; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
        
        <!-- Image section -->
        <div style="width: 100%; height: 300px; overflow: hidden;">
            <img src="<%= listing.image ? listing.image.url : 'https://via.placeholder.com/600x300?text=No+Image' %>" 
                 alt="Listing Image" 
                 style="width: 100%; height: 100%; object-fit: cover;">
        </div>

        <!-- Details section -->
        <div style="padding: 20px;">
            
            
            <ul style="list-style: none; padding: 0; margin: 0;">
                <li style="padding: 10px; border-bottom: 1px solid #eee;">
                    <strong>Title:</strong> <%= listing.title %>
                </li>
                <li style="padding: 10px; border-bottom: 1px solid #eee;">
                    <strong>Description:</strong> <%= listing.description %>
                </li>
                <li style="padding: 10px; border-bottom: 1px solid #eee;">
                    <strong>Price:</strong> ‚Çπ <%= listing.price.toLocaleString("en-IN") %>
                </li>
                <li style="padding: 10px; border-bottom: 1px solid #eee;">
                    <strong>Location:</strong> <%= listing.location %>
                </li>
                <li style="padding: 10px;">
                    <strong>Country:</strong> <%= listing.country %>
                </li>
            </ul>

            <!-- Buttons -->
            <div style="display: flex; justify-content: space-between; margin-top: 20px;">
                <a href="/listing/edit/<%= listing._id %>">
                    <button style="background: #007bff; color: white; border: none; padding: 10px 15px; border-radius: 8px; cursor: pointer;">
                        ‚úèÔ∏è Edit
                    </button>
                </a>

                <form method="POST" action="/listing/<%= listing._id %>?_method=DELETE">
                    <button type="submit" style="background: #dc3545; color: white; border: none; padding: 10px 15px; border-radius: 8px; cursor: pointer;">
                        üóëÔ∏è Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</body>

<% layout("/layouts/boilerplate") %>

    <body style="font-family: Arial, sans-serif; background-color: #f5f7fa;">

        <!-- passing data maps.js -->
        <script>
            const maptoken = "<%= process.env.MAPS_API_KEY %>"
            const listingLocation = "<%= listing.location %>"
            const listingTitle = "<%= listing.title %>"
            const listingPrice = "<%- listing.price %>"
        </script>

        <!-- Listing Header -->
        <div class="container">
            <h2 class="text-center mb-4 mt-5" style="color: #333; font-weight: 600;">
                üìå Details of <%= listing.title %>
            </h2>

            <!-- Listing Card -->
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8">
                    <div class="card shadow-lg border-0 rounded-3 mb-5">
                        <!-- Image -->
                        <div class="listing-image-container">
                            <img src="<%= listing.image ? listing.image.url : 'https://via.placeholder.com/700x350?text=No+Image' %>"
                                alt="Listing Image" class="listing-main-image">
                        </div>

                        <!-- Details -->
                        <div class="card-body p-4">
                            <ul class="list-unstyled mb-0">
                                <li class="listing-detail-item">
                                    <strong>Created By:</strong>
                                    <%= listing.owner.username%>
                                </li>
                                <li class="listing-detail-item">
                                    <strong>Title:</strong>
                                    <%= listing.title %>
                                </li>
                                <li class="listing-detail-item">
                                    <strong>Description:</strong>
                                    <%= listing.description %>
                                </li>
                                <li class="listing-detail-item">
                                    <strong>Price:</strong> ‚Çπ <%= listing.price.toLocaleString("en-IN") %>
                                </li>

                                <% if(listing.category){ %>
                                <li class="listing-detail-item">
                                    <strong>Category:</strong> <%= listing.category %>
                                </li>
                                <% } %>

                                <li class="listing-detail-item">
                                    <strong>Location:</strong>
                                    <%= listing.location %>
                                </li>
                                <li class="listing-detail-item no-border">
                                    <strong>Country:</strong>
                                    <%= listing.country %>
                                </li>
                            </ul>

                            <!-- Action Buttons -->
                            <% if(currentUser && currentUser._id.equals(listing.owner._id)) {%>
                                <div class="d-flex flex-column flex-md-row justify-content-between gap-3 mt-4">
                                    <a href="/listing/edit/<%= listing._id %>" class="btn btn-primary">
                                        ‚úèÔ∏è Edit
                                    </a>

                                    <form method="POST" action="/listing/<%= listing._id %>?_method=DELETE" class="d-inline">
                                        <button type="submit" class="btn btn-danger">
                                            üóëÔ∏è Delete
                                        </button>
                                    </form>
                                </div>
                            <% } else if(currentUser) { %>
                                <!-- Book Now Button -->
                                <div class="d-flex justify-content-center mt-4">
                                    <button type="button" class="btn btn-success btn-lg px-5" data-bs-toggle="modal" data-bs-target="#bookingModal">
                                        üìÖ Book Now - ‚Çπ<%= listing.price.toLocaleString("en-IN") %>/night
                                    </button>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Booking Modal -->
        <% if(currentUser && !currentUser._id.equals(listing.owner._id)) { %>
        <div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="bookingModalLabel">Book <%= listing.title %></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form method="POST" action="/booking/listing/<%= listing._id %>" id="bookingForm">
                        <div class="modal-body">
                            <!-- Check-in Date -->
                            <div class="mb-3">
                                <label for="checkIn" class="form-label fw-semibold">Check-in Date</label>
                                <input type="date" class="form-control" id="checkIn" name="checkIn"
                                       min="<%= new Date().toISOString().split('T')[0] %>"
                                       onchange="calculateTotalPrice()" required>
                            </div>

                            <!-- Check-out Date -->
                            <div class="mb-3">
                                <label for="checkOut" class="form-label fw-semibold">Check-out Date</label>
                                <input type="date" class="form-control" id="checkOut" name="checkOut"
                                       min="<%= new Date().toISOString().split('T')[0] %>"
                                       onchange="calculateTotalPrice()" required>
                            </div>

                            <!-- Number of Guests -->
                            <div class="mb-3">
                                <label for="guests" class="form-label fw-semibold">Number of Guests</label>
                                <select class="form-select" id="guests" name="guests" onchange="calculateTotalPrice()" required>
                                    <option value="">Select guests</option>
                                    <% for(let i = 1; i <= 10; i++) { %>
                                        <option value="<%= i %>"><%= i %> <%= i === 1 ? 'Guest' : 'Guests' %></option>
                                    <% } %>
                                </select>
                            </div>

                            <!-- Special Requests -->
                            <div class="mb-3">
                                <label for="specialRequests" class="form-label fw-semibold">Special Requests (Optional)</label>
                                <textarea class="form-control" id="specialRequests" name="specialRequests"
                                          rows="3" placeholder="Any special requirements or requests..."></textarea>
                            </div>

                            <!-- Price Summary -->
                            <div class="booking-summary p-3 bg-light rounded">
                                <h6 class="fw-semibold mb-3">Booking Summary</h6>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>‚Çπ<%= listing.price.toLocaleString("en-IN") %> √ó <span id="nightsCount">0</span> nights</span>
                                    <span id="subtotal">‚Çπ0</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Service Fee</span>
                                    <span id="serviceFee">‚Çπ0</span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between fw-semibold">
                                    <span>Total</span>
                                    <span id="totalPrice">‚Çπ0</span>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-success" id="bookBtn" disabled>
                                Confirm Booking
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <% } %>

        <!-- Redesigned Review Form -->
        <% if(currentUser) { %>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8">
                    <div class="card shadow-sm border-0 rounded-3 mb-5">
                        <div class="card-body p-4">
                            <h3 class="mb-3" style="color: #333; font-weight: 600;">üí¨ Leave a Review</h3>
                            <p class="text-muted mb-3">Your feedback helps others know more about this Place.</p>

                            <form method="POST" action="/listing/<%= listing._id %>/review" novalidate class="needs-validation">
                                <label for="rating" class="form-label fw-semibold">Your Rating</label>
                                <!-- Rating Section -->
                                <div >
                                    <div class="rating-container">
                                        <fieldset class="starability-slot">
                                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                                checked aria-label="No rating." />
                                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                            <label for="first-rate1" title="Terrible">1 star</label>
                                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                            <label for="first-rate2" title="Not good">2 stars</label>
                                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                            <label for="first-rate3" title="Average">3 stars</label>
                                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                            <label for="first-rate4" title="Very good">4 stars</label>
                                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                            <label for="first-rate5" title="Amazing">5 stars</label>
                                        </fieldset>
                                    </div>
                                </div>

                                <!-- Comment Section -->
                                <div class="mb-4">
                                    <label for="comment" class="form-label fw-semibold">Your Review</label>
                                    <textarea name="review[comment]" id="comment" class="form-control"
                                        rows="4" placeholder="Write your thoughts here..." required></textarea>
                                    <div class="invalid-feedback">Please write a review before submitting.</div>
                                </div>

                                <button class="btn btn-dark">Submit Review</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

        <!-- All Reviews -->
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h3 class="mb-4" style="color: #333; font-weight: 600;">‚≠ê All Reviews</h3>

                    <% if(listing.reviews.length===0){ %>
                        <p class="text-muted">No reviews yet. Be the first to leave one!</p>
                    <% } else { %>
                        <!-- Reviews Grid -->
                        <div class="row g-3">
                            <% for(let review of listing.reviews){ %>
                                <div class="col-12 col-md-6 col-lg-4">
                                    <div class="card h-100 border-0 shadow-sm">
                                        <div class="card-body d-flex flex-column">
                                            <!-- Review Content -->
                                            <div class="flex-grow-1">
                                                <h6 class="card-subtitle mb-2 text-muted">
                                                    @<%= review.author.username %>
                                                </h6>

                                                <!-- Stars -->
                                                <div class="mb-3">
                                                    <div class="starability-result" data-rating="<%= review.rating %>"></div>
                                                </div>

                                                <!-- Comment -->
                                                <p >
                                                    <%= review.comment %>
                                                </p>
                                            </div>

                                            <!-- Delete Button -->
                                            <% if(currentUser && currentUser._id.equals(review.author._id)) {%>
                                                <form class="mt-auto" method="POST"
                                                    action="/listing/<%= listing._id %>/review/<%= review._id %>?_method=DELETE">
                                                    <button class="btn btn-sm btn-outline-danger">Delete</button>
                                                </form>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Maps Section -->
        <div class="container">
            <div class="map-container">
                <h3 class="map-heading">üìç Where you'll be</h3>
                <h5 class="map-title"><%= listing.title %></h5>

                <div id="map"></div>
                <div id="map-message"></div>
            </div>
        </div>

        <script src="/js/maps.js"></script>
        <script src="/js/booking.js"></script>

    </body>

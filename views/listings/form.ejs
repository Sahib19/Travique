<% layout("/layouts/boilerplate") %>

    <body style="background-color: #f9f9f9; font-family: Arial, sans-serif;">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8 col-xl-6">

                    <!-- Card -->
                    <div class="card shadow-lg border-0 rounded-3 ">
                        <div class="card-body p-4">

                            <!-- Heading -->
                            <h2 class="text-center mb-4" style="color: #333; font-weight: bold;">
                                üèôÔ∏è Add New Location <br>

                            </h2>

                            <!-- Form -->
                            <form method="POST" action="/listing" class="needs-validation" novalidate
                                enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="title" class="form-label">Title</label>
                                    <input name="title" placeholder="Enter title" class="form-control" required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Please give a valid username.
                                    </div>

                                </div>

                                <div class="mb-3">
                                    <label for="description" class="form-label">Description</label>
                                    <textarea name="description" placeholder="Enter description" class="form-control"
                                        rows="3" required></textarea>

                                    <div class="invalid-feedback">
                                        Please give a short Descirption.
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="price" class="form-label">Price</label>
                                    <input name="price" placeholder="Enter price" class="form-control" required>

                                    <div class="invalid-feedback">
                                        Please give a valid price.
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="image" class="form-label">Upload Image</label>
                                    <input name="image" type="file" class="form-control">
                                </div>

                                <!-- New Category Dropdown -->
                                <div class="mb-3">
                                    <label for="category" class="form-label">Category</label>
                                    <select name="category" class="form-select" required>
                                        <option value="" disabled selected>Select a category</option>
                                        <option value="Trending">Trending</option>
                                        <option value="Rooms">Rooms</option>
                                        <option value="Iconic Cities">Iconic Cities</option>
                                        <option value="Mountains">Mountains</option>
                                        <option value="Forest">Forest</option>
                                        <option value="Heritage Sites">Heritage Sites</option>
                                        <option value="Castles">Castles</option>
                                        <option value="Beaches">Beaches</option>
                                        <option value="Camping">Camping</option>
                                        <option value="Farms">Farms</option>
                                        <option value="Arctic">Artic</option>
                                    </select>

                                    <div class="invalid-feedback">
                                        Please select a valid category.
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="mb-3 col-12 col-md-6">
                                        <label for="location" class="form-label">Location</label>
                                        <input name="location" placeholder="Enter location" class="form-control"
                                            required>

                                        <div class="invalid-feedback">
                                            Please give a valid location.
                                        </div>
                                    </div>
                                    <div class="mb-3 col-12 col-md-6">
                                        <label for="country" class="form-label">Country</label>
                                        <input name="country" placeholder="Enter country" class="form-control" required>

                                        <div class="invalid-feedback">
                                            Please give a valid country.
                                        </div>
                                    </div>
                                </div>

                                <!-- Submit button -->
                                <div class="d-grid mt-4">
                                    <button class="btn btn-dark btn-lg add-btn" type="submit">
                                        Submit
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>
                    <!-- End Card -->

                </div>
            </div>
        </div>
    </body>
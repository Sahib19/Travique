<% layout("/layouts/boilerplate") %>

    <body style="background-color: #f9f9f9; font-family: Arial, sans-serif;">
        <div class="container" style="margin-top: 80px; margin-bottom: 80px;">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6">

                    <!-- Card -->
                    <div class="card shadow-lg border-0 rounded-3 ">
                        <div class="card-body p-4">

                            <!-- Heading -->
                            <h2 class="text-center mb-4" style="color: #333; font-weight: bold;">
                                üèôÔ∏è Add New Location <br>

                            </h2>

                            <!-- Form -->
                            <form method="POST" action="/listing" class="needs-validation" novalidate>
                                <div class="mb-3">
                                    <label for="title" class="form-label">Title</label>
                                    <input name="title" placeholder="Enter title" class="form-control" required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Please give a valid username.
                                    </div>

                                </div>

                                <div class="mb-3">
                                    <label for="description" class="form-label">Description</label>
                                    <textarea name="description" placeholder="Enter description" class="form-control"
                                        rows="3" required></textarea>

                                    <div class="invalid-feedback">
                                        Please give a short Descirption.
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="price" class="form-label">Price</label>
                                    <input name="price"  placeholder="Enter price" class="form-control"
                                        required>

                                    <div class="invalid-feedback">
                                        Please give a valid price.
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="image" class="form-label">Image URL</label>
                                    <input name="image" placeholder="Enter image url" class="form-control">
                                </div>

                                <div class="row">
                                    <div class="mb-3 col-md-6">
                                        <label for="location" class="form-label">Location</label>
                                        <input name="location" placeholder="Enter location" class="form-control"
                                            required>

                                        <div class="invalid-feedback">
                                            Please give a valid location.
                                        </div>
                                    </div>
                                    <div class="mb-3 col-md-6">
                                        <label for="country" class="form-label">Country</label>
                                        <input name="country" placeholder="Enter country" class="form-control" required>

                                        <div class="invalid-feedback">
                                            Please give a valid country.
                                        </div>
                                    </div>
                                </div>

                                <!-- Submit button -->
                                <div class="d-grid mt-4">
                                    <button class="btn btn-dark btn-lg add-btn" type="submit">
                                        Submit
                                    </button>
                                </div>
                            </form>

                        </div>
                    </div>
                    <!-- End Card -->

                </div>
            </div>
        </div>
    </body>
<% layout("/layouts/boilerplate") %>

<div class="d-flex justify-content-center align-items-center " style="margin-top: 80px;">
  <div class="card shadow-lg p-4 rounded-4" style="width: 28rem;">
    <h3 class="text-center mb-4">
      <span style="color: #FF385C; font-weight: bold;">Login</span> to 
      <span style="color: #FF385C; font-weight: bold;">WonderLust</span>
    </h3>

    <form method="POST" action="/user/login" class="needs-validation" novalidate>
      
      <!-- Username -->
      <div class="mb-3">
        <label for="username " class="form-label">Username</label>
        <input 
          name="username" 
          id="username" 
          placeholder="Enter your username" 
          class="form-control" 
          type="text" 
          required>
      </div>

      <!-- Password -->
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input 
          name="password" 
          id="password" 
          placeholder="Enter your password" 
          class="form-control" 
          type="password" 
          required>
        <div class="invalid-feedback">Please enter your password.</div>
      </div>

      <!-- Login Button -->
      <button class="btn w-100 rounded-pill text-white" style="background-color: #FF385C;">Login</button>
      
      <!-- Signup Link -->
      <div class="text-center mt-3">
        <small>New user? 
          <a href="/user/signup" style="color: #FF385C; text-decoration: none; font-weight: 500;">
            Create a new account
          </a>
        </small>
      </div>
    </form>
  </div>
</div>
